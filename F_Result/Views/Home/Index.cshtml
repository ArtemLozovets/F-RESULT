@{
    ViewBag.Title = "F-RESULT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    H1 {
        text-shadow: -1px -1px #FFF, -2px -2px #FFF, -1px 1px #FFF, -2px 2px #FFF, 1px 1px #FFF, 2px 2px #FFF, 1px -1px #FFF, 2px -2px #FFF, -3px -3px 2px #BBB, -3px 3px 2px #BBB, 3px 3px 2px #BBB, 3px -3px 2px #BBB;
        color: steelblue;
        -moz-transition: all 1s;
        -o-transition: all 1s;
        -webkit-transition: all 1s;
        transition: all 1s;
    }

        H1:hover {
            color: yellowgreen;
        }
</style>


<div class="container">
    @if (Request.IsAuthenticated) { 
        <div style="width:100%; margin:5em auto; text-align:center;">
            <h1>F-RESULT</h1>
        </div>
    }

    @if (!Request.IsAuthenticated)
    {
        <div style="position:absolute" id="btnPanel">
            <a class="btn btn-primary btn-lg" href='@Url.Action("Login", "UsersManagement", new { Area = "Administrator", ReturnUrl = ViewBag.ReturnUrl })'><span class="fa fa-key"></span>&nbsp;ВХОД</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            setPosition();
        })

        $(window).resize(function () {
            setPosition();
        });

        function setPosition() {
            var wHeight = $(window).height();
            var fHeight = $('#footerBlock').height();
            $('#footerBlock')
                .css('position', 'absolute')
                .css('top', wHeight - fHeight)
                .css('left', ($(window).width() / 2) - ($('#footerBlock').width() / 2));

            var btpHeight = $('#btnPanel').height();
            var dt = ((wHeight - btpHeight - fHeight) / 2) + 50;
            $('#btnPanel')
                .css('top', dt)
                .css('left', ($(window).width() / 2) - ($('#btnPanel').width() / 2));
        }
    </script>
}