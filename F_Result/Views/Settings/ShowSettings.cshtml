@model IEnumerable<F_Result.Models.Settings>
@{
    ViewBag.Title = "Настройки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input[type="checkbox"] {
        width: 1.4em !important;
        display: inline-block !important;
        box-shadow: none !important;
        outline: none !important;
        margin-top: -.2em;
    }
</style>

<div id="loadingImg">
    <div id="preloadImg">
        <img src="~/Content/Images/loader.gif" />
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @ViewBag.Title
                <small>Системные настойки приложения</small>
            </h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Главная", "Index", "Home", new { Area = "" }, null)</li>
                <li>Управление</li>
                <li class="active">Настройки</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Доступ к проектам</h3>
            </div>
            @{ //Читаем значение параметра из БД и устанавливаем состояние чекбокса
                var chkFlag = "";
                var _set = Model.FirstOrDefault(x => x.SettingName == "PM_access_all_projects");
                if (_set != null)
                {
                    if (_set.SettingValue.ToString() == "true") { chkFlag = "checked"; }
                }
            }
            <div class="panel-body form-inline">
                <input type="checkbox"
                       name="acces_all_prj"
                       value=""
                       @chkFlag
                       id="PrjAccChb"
                       class="form-control" />
                &nbsp;<label for="PrjAccChb">Разрешить руководителям проектов доступ ко всем проектам</label>
            </div>
        </div>
    </div>

</div>

<a href="#" class="scrollup1">Наверх</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/toparrow.js"></script>
    <script>
        $(function () {
            $('#loadingImg').hide();
        });

        $('#PrjAccChb').on('click', function (e) {
            if (confirm("Изменить параметр?")) {
                var _pName = 'PM_access_all_projects';
                var _pValue = $(this).prop('checked');
                var _pNote = 'Данный параметр определяет будут ли пользователю в роли "Руководитель проекта" доступны данные по всем проектам ';
                _pNote += 'или только по тем, в которых он является руководителем проекта';

                $.ajax({
                    type: "POST",
                    url: '/Settings/WriteSetting',
                    data: { 'pName': _pName, 'pValue': _pValue, 'pNote': _pNote },
                    success: function (data) {
                        if (!data.Result) {
                            //Если произошла ошибка при сохранении значения параметра - возвращаем чекбокс в исходное состояние
                            $('#PrjAccChb').prop('checked', !$('#PrjAccChb').prop('checked'));
                            alert(data.Message);
                        }
                        else {
                            alert(data.Message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Ошибка выполнения запроса!');
                    }
                });

            }
            else {
                //Если пользователь выбрал "Отмена" - возвращаем чекбокс в исходное состояние
                $('#PrjAccChb').prop('checked', !$('#PrjAccChb').prop('checked'));
            }
        });
    </script>

}
