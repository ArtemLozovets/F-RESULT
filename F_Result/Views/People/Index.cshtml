@model IEnumerable<F_Result.Models.employee>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @ViewBag.Title
                <small>Подробное название</small>
            </h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Главная", "Index", "Home", new { Area = "" }, null)</li>
                <li class="active">!!!!!!</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6" id="resultMessage" style="display:block; height:30px;">
            <p class="text-success" id="MessageOk"> @TempData["MessageOk"]</p>
            <p class="text-danger" id="MessageError">  @TempData["MessageError"]</p>
        </div>
    </div>

    <p>
        <a class="btn btn-default" style="margin:2px 2px;" title="Добавить..." href='@Url.Action("Create")'><i class="fa fa-plus-circle"></i> Добавить...</a>
    </p>
    <table class="table table table-bordered table-striped table-responsive table-hover gridtable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.job_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.job_lvl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pub_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hire_date)
            </th>
            <th style="width:128px; min-width:128px"></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">
                    <p class="text-center text-danger" style="margin-top:12px;">Записи, соответствующие критериям поиска, не найдены<p>
                </td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.minit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.job_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.job_lvl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pub_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hire_date)
                </td>
                <td style="text-align:center;">
                    <a class="btn btn-default btn-sm" title="Подробно" href='@Url.Action("Details", new {id=item.emp_id})'><span class="glyphicon glyphicon-info-sign"></span></a>
                    <a class="btn btn-default btn-sm" title="Редактировать" href='@Url.Action("Edit", new {id=item.emp_id})'><span class="glyphicon glyphicon-edit"></span></a>
                    <a class="btn btn-default btn-sm" title="Удалить" href='@Url.Action("Delete", new {id=item.emp_id})'><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </table>
    <a href="#" class="scrollup1">Наверх</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/toparrow.js"></script>
    <script type="text/javascript">
        $(function () {

        });
    </script>
}


