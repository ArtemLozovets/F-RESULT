    <script>
            function DRPickerInit() {
                $('#startDate').dateRangePicker(
                 {
                     customTopBar: 'Отчетная дата',
                     showWeekNumbers: true,
                     startOfWeek: 'monday',
                     singleDate: true,
                     singleMonth: true,
                     language: 'ru',
                     startOfWeek: 'monday',
                     separator: ' - ',
                     format: 'DD/MM/YYYY',
                     autoClose: false,
                     monthSelect: true,
                     yearSelect: true,
                     setValue: function (s) {
                         $('#hRepDate').val(s);
                         $(this).val(s);
                     },
                     customOpenAnimation: function (cb) {
                         $(this).fadeIn(300, cb);
                     },
                     customCloseAnimation: function (cb) {
                         $(this).fadeOut(300, cb);
                     },
                     showShortcuts: false,
                     time: {
                         enabled: false
                     },
                     extraClass: 'date-range-pickerM'
                 })
            .bind('datepicker-apply', function (event, obj) {
                globalVarsClear();
            });
            };


            $('body').on('change', '#startDate', function () {
                if ($(this).val() === '') {
                    var nowDT = new Date;
                    var nowDate = moment(nowDT).format('DD/MM/YYYY');
                    $('#hRepDate').val(nowDate);
                    $(this).val(nowDate);
                };
                globalVarsClear();
            });

