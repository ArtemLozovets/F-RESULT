@model F_Result.Models.Account

@{
    ViewBag.Title = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-12">
        <h1 class="page-header">
            @ViewBag.Title
            <small>Удаление счета организации</small>
        </h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Главная", "Index", "Home", new { Area = "" }, null)</li>
            <li>Справочники</li>
            <li>@Html.ActionLink("Счета организаций", "AСShow", "Accounts")</li>
            <li class="active">Удаление</li>
        </ol>
    </div>

    <h3 class="text-danger">Вы действительно хотите удалить выбранную запись?</h3>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MFO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MFO)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @if (Model.Status)
            {<span class="text-success">Счет активен</span>}
            else
            {<span class="text-danger">Счет неактивен</span>}
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Note)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Note)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a class="btn btn-primary" href='@Url.Action("ACShow")'><span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp;Назад</a>
                <button type="submit" title="Удалить запись" class="btn btn-primary"><i class="glyphicon glyphicon-trash"></i>&nbsp;Удалить</button>
            </div>
        }
    </div>
</div>