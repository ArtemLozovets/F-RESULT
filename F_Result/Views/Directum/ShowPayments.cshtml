@{
    ViewBag.Title = "Платежи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/DateRangePicker/daterangepicker.min.css" rel="stylesheet" />
<style>
    #sumSpan {
        text-align: right;
    }

    .sum-block {
        padding: 10px;
        background-color: #436C98;
    }

    .sum-container:first-child {
        margin-right: 20px;
    }

</style>

<div id="loadingImg">
    <div id="preloadImg">
        <img src="~/Content/Images/loader.gif" />
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @ViewBag.Title
                <small>Входящие платежи</small>
            </h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Главная", "Index", "Home", new { Area = "" }, null)</li>
                <li>Показатели</li>
                <li class="active">Входящие платежи</li>
            </ol>
        </div>
    </div>

    <p class="pull-right">
        <a class="btn btn-default" style="margin:2px 2px;" id="filterBtn" title="Панель фильтра" href='#'><i class="glyphicon glyphicon-filter"></i></a>
        <a class="btn btn-default" style="margin:2px 2px;" id="filterClear" title="Сброс фильтра" href='#'><i class="glyphicon glyphicon-refresh"></i></a>
    </p>
    <div class="row">
        <div class="col-md-6" id="resultMessage" style="display:block; height:30px;">
            <p class="text-success" id="MessageOk"> @TempData["MessageOk"]</p>
            <p class="text-danger" id="MessageError">  @TempData["MessageError"]</p>
        </div>
    </div>

    <table class="table table table-bordered table-striped table-responsive table-hover gridtable" id="gridtable" style="width:100%">
        <thead>
            <tr role="row" id="search-row" hidden style="background-color:#ddddff">
                <th><input type="text" class="form-control input-sm sb" id="prgFlt" style="width: 100%" placeholder="Проект" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Руководитель проекта" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Заказчик" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Договор" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Тип" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Куратор" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Тип" /></th>
                <th><input type="text" class="form-control input-sm dff" readonly style="width: 100%" placeholder="Дата" /></th>
                <th><input type="text" class="form-control input-sm sb" style="width: 100%" placeholder="Сумма" /></th>
            </tr>

            <tr role="row">
                <th colspan="2">Проект</th>
                <th colspan="4">Договор</th>
                <th colspan="3">Оплата</th>
            </tr>

            <tr role="row">
                <th>Проект</th>
                <th>Руководитель</th>
                <th>Заказчик</th>
                <th>Договор</th>
                <th>Тип</th>
                <th>Куратор</th>
                <th>Тип</th>
                <th>Дата</th>
                <th>Сумма</th>
            </tr>
        </thead>
    </table>

    <a href="#" class="scrollup1">Наверх</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/toparrow.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables/responsive.bootstrap.min.js"></script>

    @*Блок скриптов для работы с DateRangePicker*@
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/DateRangePicker/jquery.daterangepicker.min.js"></script>
    <script>
        $(function () {
            $('.dff').each(function () {
                $(this).dateRangePicker(
                     {
                         language: 'ru',
                         startOfWeek: 'monday',
                         separator: ' - ',
                         format: 'DD/MM/YYYY',
                         autoClose: false,
                         monthSelect: true,
                         yearSelect: true,
                         setValue: function (s) {
                             $(this).val(s);
                         },
                         customOpenAnimation: function (cb) {
                             $(this).fadeIn(300, cb);
                         },
                         customCloseAnimation: function (cb) {
                             $(this).fadeOut(300, cb);
                         },
                         showShortcuts: false,
                         //shortcuts:
                         //   {
                         //       'next': ['week', 'month', 'year']
                         //   },

                         time: {
                             enabled: false
                         },
                         extraClass: 'date-range-pickerM'
                     })
                .bind('datepicker-closed', function (event, obj) {
                    $(this).attr('title', $(this).val()).trigger('change');
                })
                .bind('datepicker-open', function () {
                    $(this).data('dateRangePicker').clear();
                });

            });
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $('#loadingImg').hide();
            var table = $('#gridtable').DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": true,
                "responsive": true,
                "pageLength": 25, // Количество записей в таблице по умолчанию
                "pagingType": "simple_numbers",
                "dom": "<'row'<'col-sm-3'l><'col-sm-3 text-center'B><'#sumSpan.col-sm-6'B>>" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                "language": {
                    "lengthMenu": "Записей: _MENU_",
                    "zeroRecords": "Записи отсутствуют",
                    "info": "Страница _PAGE_ из _PAGES_. Записи _START_ - _END_ из _TOTAL_",
                    "infoEmpty": "Записи отсутствуют",
                    "infoFiltered": "(Отфильтровано из _MAX_ записей)",
                    "search": "Поиск",
                    "processing": "<div id='loadingImg'><div id='preloadImg'><img src='../Content/Images/loader.gif' /></div></div>",
                    "sInfoThousands": " ",
                    "oPaginate": {
                        "sNext": ">",
                        "sPrevious": "<"
                    }
                },
                "fnDrawCallback": function (settings) {
                    //Используем эту функцию для обновления внешних елементов.
                    //Использование "dataSrc" давало ошибки при частом обновлении таблицы в процессе фильтрации.
                    var api = this.api();
                    var json = api.ajax.json();
                    var _pSum = json.psum.toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1 ");
                    var _fSum = json.fsum.toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1 ");
                    $("#sumSpan").html('<span class="sum-container">&sum;<sub>дог. </sub><span class="badge sum-block">' + _pSum + '&#8372;</span></span>'
                        + '<span class="sum-container">&sum;<sub>плат. </sub><span class="badge sum-block">' + _fSum + '&#8372;</span></span>');
                },
                "ajax": {
                    "url": "/Directum/LoadPayments",
                    "type": "POST",
                    "datatype": "json",
                    "dataSrc": function (d) {
                        if (d.data.length === 0) {
                            if (d.errormessage != "") {
                                alert(d.errormessage);
                            }
                        }
                        return d.data;
                    }
                },
                "columns": [
                    {
                        "data": "Project", "name": "Project", "autoWidth": true,
                        "render": function (data, type, full, meta) {
                            return '<a href="#" class="prgLink">' + data + '</a>';
                        }
                    },
                    { "data": "Chief", "name": "Chief", "autoWidth": true },
                    { "data": "Client", "name": "Client", "autoWidth": true },
                    {
                        "data": "Agreement",
                        "name": "Agreement",
                        "class": "AgrName",
                        "autoWidth": true,
                    },
                    { "data": "AgrType", "name": "AgrType", "autoWidth": true },
                    { "data": "Manager", "name": "Manager", "autoWidth": true },
                   
                    { "data": "PaymentDesc", "name": "PaymentDesc", "autoWidth": true },
                    {
                        "data": "PaymentDate", "name": "PaymentDate", "autoWidth": true, "type": "date ",
                        "render": function (value) {
                            return formatDate(value);
                        }
                    },
                    { "data": "Payment", "name": "Payment", "autoWidth": true, render: $.fn.dataTable.render.number('&nbsp;', ',', 2), "class": "text-right" }
                ],
                "createdRow": function (row, data, rowIndex) {
                    var _summ = 0;
                    var _date = formatDate(data.AgrDate);
                    if (data.Summ > 0) {
                       _summ = data.Summ.toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1 ");
                    }
                    var titleStr = 'Дата договора: ' + _date + '\r\nСумма договора: ' + _summ;
                    $('.AgrName', $(row)).attr('title', titleStr);
                },
                "order": [[7, "desc"]]
            });

            table.columns().eq(0).each(function (colIdx) {
                $('.sb', $('th')[colIdx]).on('keyup change', function () {
                    table.column(colIdx).search(this.value).draw();
                });

                $('.dff', $('th')[colIdx]).on('change', function () {
                    table.column(colIdx).search(this.value).draw();
                });
            });

        });

        function formatDate(value) {
            if (value === null) return "";
            var pattern = /Date\(([^)]+)\)/;
            var results = pattern.exec(value);
            var dt = new Date(parseFloat(results[1]));
            var _d = dt.getDate() < 10 ? "0" + dt.getDate() : dt.getDate();
            var _m = (dt.getMonth() + 1) < 10 ? "0" + (dt.getMonth() + 1) : (dt.getMonth() + 1);
            return _d + "/" + _m + "/" + dt.getFullYear();
        };

    </script>

    <script>
        //Скрипт фильтрации списка по проекту после клика по имени проекта
        $('body').on('click', '.prgLink', function (e) {
            e.preventDefault();
            $('#prgFlt').val($(this).text()).trigger('change');

        });
    </script>

    <script>
        $('body').on('click', '#filterBtn', function () {
            ClearFilter();
            $('#search-row').toggle(300);
        });

        $('body').on('click', '#filterClear', function () {
            ClearFilter();
        });

        function ClearFilter() {
            var table = $('#gridtable').DataTable().draw();
            $(".sb, .dff").each(function (colIdx) {
                $(this).val('');
                table.column(colIdx).search('');
            });
            table.draw();
        }
    </script>

}